{% extends 'base.html.twig' %}

{% block title %}Manage datas{% endblock %}

{% block style %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <br>
    <div class="d-flex justify-content-center">
        <form action="{{ path('party_generate_post') }}" method="POST">
            <div class="mb-3">
                <select class="form-select" aria-label="Default select example" name="database">
                    <option selected>-- Sélectionner une database --</option>
                    <option value="mysql">MySQL</option>
                    <option value="sqlite">SQLite</option>
                    <option value="mongodb">MongoDB</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="playerNumber" class="form-label">Nombre de joueur</label>
                <input type="range" class="form-range" name="playerNumber" id="playerNumber" min="2" max="4" step="1" required>
            </div>
            <div class="mb-3">
                <label for="roundNumber" class="form-label">Nombre de manches</label>
                <input type="range" class="form-range" name="roundNumber" id="roundNumber" min="1" max="3" step="1" required>
            </div>
            <div class="mb-3">
                <label for="partyNumber" class="form-label">Nombre de parties</label>
                <input type="range" class="form-range" name="partyNumber" id="partyNumber" min="1" max="50" step="1" required>
            </div>
            <button type="submit" class="btn btn-primary">Générer</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
{% endblock %}
